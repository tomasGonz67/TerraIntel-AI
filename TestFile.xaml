<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="TerraIntel_lAI.TestFile"
             Title="Test File">

    <StackLayout Padding="20">
        <!-- Input for Name -->
        <Entry x:Name="nameEntry" Placeholder="Enter name" />

        <!-- Button to Add Data -->
        <Button Text="Add Item" Clicked="OnAddItemClicked" />

        <!-- Button to Retrieve Data -->
        <Button Text="Retrieve Items" Clicked="OnRetrieveItemsClicked" />

        <!-- ListView to Display Items -->
        <ListView x:Name="itemsListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
