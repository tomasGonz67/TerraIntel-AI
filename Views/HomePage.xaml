<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TerraIntel_lAI.HomePage"
             >


    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="terra_intel.png"
                HeightRequest="300"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a hovercraft number nine" />


            <Label
                Text="Sends your location to AI, retrieves an interesting fact, and stores it in your history"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="App Info" />


            <Button
                Text="Go to Main Page"
                Command="{Binding GoToMainCommand}" />
            <Button
                Text="Go to History"
                Command="{Binding GoToHistoryCommand}" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
