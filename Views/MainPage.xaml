<?xml version="1.0" encoding="utf-8"?>
<ContentPage
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  x:Class="TerraIntel_lAI.MainPage"
  Title="MainPage">

    <VerticalStackLayout
    Padding="30"
    Spacing="20"
    VerticalOptions="Center">

        <!-- (Optional) Bind to your ViewModelâ€™s AiResponse later -->
        <Label
      Text="{Binding AiResponse}"
      Style="{StaticResource ResponseLabelStyle}" />

        <Button
      Text = "Get Fact"
      Command="{Binding GetFactCommand}"/>

        <Button
            Text="Go to History"
            Command="{Binding GoToHistoryCommand}" />

        <Label
    Text="{Binding NotificationMessage}"
    FontAttributes="Italic"
    HorizontalOptions="Center" />


    </VerticalStackLayout>
</ContentPage>
